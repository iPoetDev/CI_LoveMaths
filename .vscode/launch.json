  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch File",
      "file": "${workspaceFolder}/index.html",
      "firefoxExecutable": "C:\\Users\\Charles\\AppData\\Local\\Firefox Developer Edition\\firefox.exe",
      "firefoxArgs": [],
      "internalConsoleOptions": "openOnSessionStart",
      "clearConsoleOnReload": false,
      "pathMappings": [],
      "preferences": {},
      "reloadOnChange": {
        "watch": "${workspaceFolder}/**/*.js",
        "ignore": "**/node_modules/**"
      },
    },
    {
      "type": "vscode-edge-devtools.debug",
      "request": "launch",
      "name": "MS Edge: Dev",
      "url": "http://127.0.01:3001",
      // "url": "http://127.0.01:3000",
      "webRoot": "${workspaceFolder}",
      "vscode-edge-devtools.browserFlavor": "Dev",
    },
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://127.0.0.1:3001",
      // "url": "http://127.0.01:3000",
      "webRoot": "${workspaceFolder}",
      "cleanUp": "onlyTab",
      "cwd": "${workspaceFolder}",
      "trace": true,
      "smartStep": true,
      "profileStartup": true,
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      },
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "console",
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!**/node_modules/**"
      ],
      "inspectUri": null,
      "includeLaunchArgs": true,
      "includeDefaultArgs": true,
      "enableContentValidation": true,
      "browserLaunchLocation": null,
      "address": "127.0.0.1",
