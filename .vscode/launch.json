    },
    {
      "type": "chrome",
      "name": "Server: http://127.0.0.1:3001",
      "request": "launch",
      "url": "http://127.0.0.1:3001",
      "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "type": "chrome",
